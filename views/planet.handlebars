{{#each planets}}

<div class="page-header" style="margin: 40px 107.5px 20px 107.5px">
      <h3 class="text-center">Be the Master of your own Universe</h3> 
      <h3>25% off 2nd Planet Purchase</h3>
      <h1 class="text-center"><span class="glyphicon glyphicon-globe"></span> <a href="http://localhost:3000/" style="color:white; font-size:70px">My Planet</a></h1>
      <h1 class="text-right"><span class="glyphicon glyphicon-shopping-cart"></span><a href="http://localhost:3000/cart/1" style="text-decoration: none"> Cart</a></h1>
    </div>

 <div class="container">
  <div class="jumbotron">

  <div class="row">
  <div class="col-sm-12 col-md-12">
    <div class="thumbnail">
      <img src="/assets/img/loading.gif" alt="blue planet" style="width:150px; height:150px">
      <div class="caption">
        <h1>Name : {{name}}</h1>
        <h2>Mass : {{mass}} </h2>
